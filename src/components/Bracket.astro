<script>
  // Bracket Component Controller
  class BracketController {
    constructor(wrapper) {
      this.wrapper = wrapper;
      this.swiper = wrapper.querySelector('[data-bracket-swiper]');
      this.pills = wrapper.querySelectorAll('[data-round-pill]');
      this.currentRound = 0;

      this.init();
    }

    init() {
      // Pill navigation
      this.pills.forEach(pill => {
        pill.addEventListener('click', () => {
          const round = parseInt(pill.dataset.roundPill);
          this.scrollToRound(round);
        });
      });

      // Sync pills on scroll
      if (this.swiper) {
        this.swiper.addEventListener('scroll', () => this.handleScroll());
      }
    }

    scrollToRound(index) {
      const panels = this.wrapper.querySelectorAll('[data-round-panel]');
      if (panels[index]) {
        panels[index].scrollIntoView({ behavior: 'smooth', inline: 'start', block: 'nearest' });
      }
    }

    handleScroll() {
      if (!this.swiper) return;

      const scrollLeft = this.swiper.scrollLeft;
      const panelWidth = this.swiper.offsetWidth;
      const newRound = Math.round(scrollLeft / panelWidth);

      if (newRound !== this.currentRound) {
        this.currentRound = newRound;
        this.updatePills();
      }
    }

    updatePills() {
      this.pills.forEach((pill, index) => {
        pill.classList.toggle('active', index === this.currentRound);
      });
    }
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    const wrapper = document.querySelector('[data-bracket-wrapper]');
    if (wrapper) {
      new BracketController(wrapper);
    }
  });

  // Also initialize if Astro navigates
  document.addEventListener('astro:page-load', () => {
    const wrapper = document.querySelector('[data-bracket-wrapper]');
    if (wrapper) {
      new BracketController(wrapper);
    }
  });
</script>
