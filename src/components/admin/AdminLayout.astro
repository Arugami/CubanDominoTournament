      // Global toast function
      window.showToast = function(message, type = 'default', duration = 3000) {
        const container = document.getElementById('toastContainer');
        const toast = document.createElement('div');
        toast.className = `toast toast--${type}`;
        toast.textContent = message;
        container.appendChild(toast);

        // Trigger animation
        requestAnimationFrame(() => {
          toast.classList.add('show');
        });

        // Remove after duration
        setTimeout(() => {
          toast.classList.remove('show');
          setTimeout(() => toast.remove(), 300);
        }, duration);
      };

      async function initAdmin() {
        const authLoading = document.getElementById('authLoading');
        const adminApp = document.getElementById('adminApp');

        try {
          const { createClient } = await import('https://esm.sh/@supabase/supabase-js@2');
          const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

          // Store for use by child pages
          window.supabase = supabase;

          // Check auth session
          const { data: { session } } = await supabase.auth.getSession();

          if (!session) {
            window.location.href = '/admin/login';
            return;
          }

          // Verify admin status
          const { data: adminUser, error } = await supabase
            .from('admin_users')
            .select('id, name, role')
            .eq('email', session.user.email)
            .single();

          if (error || !adminUser) {
            await supabase.auth.signOut();
            window.location.href = '/admin/login';
            return;
          }

          // Store admin info
          window.currentAdmin = adminUser;

          // Set super_admin class for role-based UI visibility
          if (adminUser.role === 'super_admin') {
            adminApp.classList.add('is-super-admin');
          }

          // Update UI with user info (both mobile and desktop)
          const displayName = adminUser.name || session.user.email.split('@')[0];
          const displayRole = adminUser.role === 'super_admin' ? 'Super Admin' : 'Admin';
          const avatarInitial = (adminUser.name || session.user.email)[0].toUpperCase();

          // Desktop sidebar
          document.getElementById('userName').textContent = displayName;
          document.getElementById('userRole').textContent = displayRole;
          document.getElementById('userAvatar').textContent = avatarInitial;

          // Mobile header and user menu
          document.getElementById('mobileUserAvatar').textContent = avatarInitial;
          document.getElementById('menuAvatar').textContent = avatarInitial;
          document.getElementById('menuUserName').textContent = displayName;
          document.getElementById('menuUserRole').textContent = displayRole;

          // Show admin app
          authLoading.classList.add('hidden');
          adminApp.style.display = 'flex';

          // Mobile user menu handlers
          const userMenu = document.getElementById('userMenu');
          const mobileUserBtn = document.getElementById('mobileUserBtn');
          const closeUserMenu = document.getElementById('closeUserMenu');

          mobileUserBtn.addEventListener('click', () => {
            userMenu.classList.add('open');
          });

          closeUserMenu.addEventListener('click', () => {
            userMenu.classList.remove('open');
          });

          // Close menu when tapping backdrop
          userMenu.addEventListener('click', (e) => {
            if (e.target === userMenu) {
              userMenu.classList.remove('open');
            }
          });

          // Logout handlers (both mobile and desktop)
          const handleLogout = async () => {
            await supabase.auth.signOut();
            window.location.href = '/admin/login';
          };

          document.getElementById('logoutBtn').addEventListener('click', handleLogout);
          document.getElementById('mobileLogoutBtn').addEventListener('click', handleLogout);

          // ===== Mobile Nav Popup Handlers =====
          const mobilePopupBtns = document.querySelectorAll('[data-mobile-popup]');
          const popupBackdrops = document.querySelectorAll('.nav-popup-backdrop');

          mobilePopupBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
              e.preventDefault();
              const popupId = btn.getAttribute('data-mobile-popup');
              const backdrop = document.querySelector(`[data-popup-for="${popupId}"]`);
              if (backdrop) {
                // Close any open popups first
                popupBackdrops.forEach(p => p.classList.remove('open'));
                backdrop.classList.add('open');
              }
            });
          });

          // Close popup when clicking backdrop
          popupBackdrops.forEach(backdrop => {
            backdrop.addEventListener('click', (e) => {
              if (e.target === backdrop) {
                backdrop.classList.remove('open');
              }
            });
          });

          // ===== Desktop Sidebar Submenu Handlers =====
          const navToggleBtns = document.querySelectorAll('[data-nav-toggle]');

          navToggleBtns.forEach(btn => {
            btn.addEventListener('click', () => {
              btn.classList.toggle('expanded');
            });
          });

          // Dispatch ready event for child pages
          window.dispatchEvent(new CustomEvent('adminReady', { detail: { supabase, adminUser } }));

        } catch (err) {
          console.error('Admin init error:', err);
          window.location.href = '/admin/login';
        }
      }

      initAdmin();
    </script>
  </body>
</html>
