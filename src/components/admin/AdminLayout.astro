// AdminLayout - Shared layout for all admin pages
// Includes navigation, auth check, and consistent styling

interface NavChild {
  id: string;
  label: string;
  href: string;
}

interface NavItem {
  id: string;
  label: string;
  icon: string;
  href?: string;
  children?: NavChild[];
}

interface Props {
  title: string;
  activeNav?: 'dashboard' | 'registrations' | 'teams' | 'round-robin' | 'bracket' | 'announcements' | 'settings';
}

const { title, activeNav = 'dashboard' } = Astro.props;

const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

const navItems: NavItem[] = [
  { id: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'grid' },
  {
    id: 'roster',
    label: 'Roster',
    icon: 'users',
    children: [
      { id: 'registrations', label: 'Players', href: '/admin/registrations' },
      { id: 'teams', label: 'Teams', href: '/admin/teams' },
    ]
  },
  {
    id: 'tournament',
    label: 'Tournament',
    icon: 'bracket',
    children: [
      { id: 'round-robin', label: 'Round Robin', href: '/admin/round-robin' },
      { id: 'bracket', label: 'Finals', href: '/admin/bracket' },
    ]
  },
  { id: 'announcements', label: 'Ticker', href: '/admin/announcements', icon: 'megaphone' },
];

// Helper to check if a nav item (or its children) is active
const isNavActive = (item: NavItem): boolean => {
  if (item.href) {
    return activeNav === item.id;
  }
  if (item.children) {
    return item.children.some(child => child.id === activeNav);
  }
  return false;
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | CDL Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,700;0,6..96,800;0,6..96,900;1,6..96,400;1,6..96,700&family=IBM+Plex+Sans:wght@400;500;600&family=IBM+Plex+Sans+Condensed:wght@600;700&display=swap"
      rel="stylesheet"
    />
    <style is:global>
      :root {
        color-scheme: dark;
        --ink: #1c130f;
        --muted: #594a3f;
        --copper: #b76a3b;
        --cream: #f8efe6;
        --bone: #fff7ef;
        --brass: #d4a574;
        --gold: #ffd700;
        --bg-dark: #0a0705;
        --bg-card: rgba(28, 19, 15, 0.9);
        --border-subtle: rgba(212, 165, 116, 0.15);
        --border-accent: rgba(212, 165, 116, 0.3);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html, body {
        height: 100%;
      }

      body {
        font-family: "IBM Plex Sans", system-ui, sans-serif;
        background: var(--bg-dark);
        color: #fff;
        line-height: 1.5;
      }

      /* ===== ATMOSPHERIC BACKGROUND SYSTEM ===== */
      /* Warm cigar lounge atmosphere - same as main site */
      .admin-atmosphere {
        position: fixed;
        inset: 0;
        background:
          /* Warm copper glow from top center */
          radial-gradient(ellipse at 50% 0%, rgba(183, 106, 59, 0.12) 0%, transparent 50%),
          /* Brass warmth from bottom right corner */
          radial-gradient(ellipse at 85% 85%, rgba(212, 165, 116, 0.06) 0%, transparent 40%),
          /* Secondary brass warmth from left */
          radial-gradient(ellipse at 10% 60%, rgba(212, 165, 116, 0.04) 0%, transparent 35%),
          /* Base warm dark gradient */
          radial-gradient(ellipse at center, #1a120d 0%, #0d0906 50%, #0a0705 100%);
        pointer-events: none;
        z-index: 0;
      }

      /* Film grain with warmth */
      .admin-grain {
        position: fixed;
        inset: -50%;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        opacity: 0.035;
        pointer-events: none;
        z-index: 1;
        mix-blend-mode: overlay;
      }

      /* Warm vignette - tobacco room edges */
      .admin-vignette {
        position: fixed;
        inset: 0;
        background:
          /* Subtle brass glow at center-top */
          radial-gradient(ellipse at 50% 20%, rgba(212, 165, 116, 0.03) 0%, transparent 50%),
          /* Dark vignette edges for depth */
          radial-gradient(ellipse at center, transparent 30%, rgba(10, 7, 5, 0.5) 100%);
        pointer-events: none;
        z-index: 2;
      }

      /* Common button styles */
      .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        font-family: "IBM Plex Sans Condensed", sans-serif;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
      }

      .btn--primary {
        background: linear-gradient(180deg, var(--brass) 0%, var(--copper) 100%);
        color: var(--ink);
        box-shadow: 0 2px 8px rgba(183, 106, 59, 0.3);
      }

      .btn--primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 16px rgba(183, 106, 59, 0.4);
      }

      .btn--secondary {
        background: rgba(255, 255, 255, 0.05);
        color: var(--brass);
        border: 1px solid var(--border-accent);
      }

      .btn--secondary:hover {
        background: rgba(255, 255, 255, 0.1);
      }

      .btn--danger {
        background: rgba(244, 67, 54, 0.1);
        color: #e57373;
        border: 1px solid rgba(244, 67, 54, 0.3);
      }

      .btn--danger:hover {
        background: rgba(244, 67, 54, 0.2);
      }

      .btn--sm {
        padding: 6px 12px;
        font-size: 0.75rem;
      }

      /* Card styles - with depth and warmth */
      .card {
        background:
          linear-gradient(180deg, rgba(28, 19, 15, 0.95) 0%, rgba(20, 14, 10, 0.98) 100%);
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        padding: 24px;
        position: relative;
        /* Inner glow for depth */
        box-shadow:
          inset 0 1px 0 rgba(212, 165, 116, 0.08),
          inset 0 0 20px rgba(0, 0, 0, 0.2),
          0 4px 20px rgba(0, 0, 0, 0.3);
      }

      .card__header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--border-subtle);
      }

      .card__title {
        font-family: "Bodoni Moda", serif;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--brass);
        letter-spacing: 0.02em;
      }

      /* Table styles */
      .table {
        width: 100%;
        border-collapse: collapse;
      }

      .table th,
      .table td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid var(--border-subtle);
      }

      .table th {
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--brass);
        background: rgba(0, 0, 0, 0.2);
      }

      .table td {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.85);
      }

      .table tr:hover td {
        background: rgba(255, 255, 255, 0.02);
      }

      /* Form inputs - with warm depth */
      .input {
        width: 100%;
        padding: 10px 14px;
        font-family: "IBM Plex Sans", sans-serif;
        font-size: 0.9rem;
        color: #fff;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        outline: none;
        transition: all 0.2s ease;
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
      }

      .input:focus {
        border-color: var(--brass);
        box-shadow:
          inset 0 2px 4px rgba(0, 0, 0, 0.2),
          0 0 0 2px rgba(212, 165, 116, 0.1);
      }

      .input::placeholder {
        color: rgba(255, 255, 255, 0.3);
        font-style: italic;
      }

      /* Status badges */
      .badge {
        display: inline-block;
        padding: 4px 10px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-radius: 4px;
      }

      .badge--pending {
        background: rgba(255, 193, 7, 0.15);
        color: #ffc107;
      }

      .badge--active, .badge--confirmed {
        background: rgba(76, 175, 80, 0.15);
        color: #81c784;
      }

      .badge--completed {
        background: rgba(33, 150, 243, 0.15);
        color: #64b5f6;
      }

      .badge--cancelled {
        background: rgba(244, 67, 54, 0.15);
        color: #e57373;
      }

      /* ===== GLOBAL MODAL STYLES (inherited by child pages) ===== */
      .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
      }

      .modal {
        background:
          linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(20, 14, 10, 0.98) 100%);
        border: 1px solid var(--border-subtle);
        box-shadow:
          inset 0 1px 0 rgba(212, 165, 116, 0.08),
          0 8px 40px rgba(0, 0, 0, 0.5);
      }

      .modal__header {
        background:
          linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(24, 16, 12, 0.98) 100%);
        border-bottom: 1px solid var(--border-subtle);
        box-shadow: inset 0 -1px 0 rgba(212, 165, 116, 0.05);
      }

      /* Mobile Modal Sticky Actions */
      @media (max-width: 768px) {
        .modal__actions--sticky {
          position: sticky;
          bottom: 0;
          background: linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(20, 14, 10, 0.98) 100%);
          margin: 8px -20px 0;
          padding: 16px 20px;
          padding-bottom: max(16px, env(safe-area-inset-bottom));
          border-top: 1px solid var(--border-subtle);
          box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
        }
      }

      /* Micro-interactions - The Lift */
      .card-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }

      .card-lift:hover {
        transform: translateY(-2px);
        box-shadow:
          inset 0 1px 0 rgba(212, 165, 116, 0.08),
          inset 0 0 20px rgba(0, 0, 0, 0.2),
          0 8px 30px rgba(0, 0, 0, 0.4);
      }

      /* Micro-interactions - The Slam */
      .btn-slam {
        transition: transform 0.15s ease, box-shadow 0.15s ease;
      }

      .btn-slam:active {
        transform: scale(0.97);
        box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.15);
      }

      /* Toast Notification System */
      .toast-container {
        position: fixed;
        bottom: 100px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        pointer-events: none;
      }

      @media (min-width: 769px) {
        .toast-container {
          bottom: 32px;
        }
      }

      .toast {
        background: linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(20, 14, 10, 0.98) 100%);
        border: 1px solid var(--border-accent);
        border-radius: 12px;
        padding: 14px 20px;
        color: #fff;
        font-size: 0.9rem;
        font-weight: 500;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
        white-space: nowrap;
      }

      .toast.show {
        opacity: 1;
        transform: translateY(0);
      }

      .toast--success {
        border-color: rgba(129, 199, 132, 0.4);
      }

      .toast--success::before {
        content: '';
        display: inline-block;
        width: 8px;
        height: 8px;
        background: #81c784;
        border-radius: 50%;
        margin-right: 10px;
        box-shadow: 0 0 8px rgba(129, 199, 132, 0.5);
      }
    </style>
    <style>
      /* MOBILE-FIRST: Base styles are mobile, desktop overrides at bottom */

      .admin-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        min-height: 100dvh;
        position: relative;
        z-index: 1;
      }

      /* Mobile Header - with warm depth */
      .mobile-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px 20px;
        background:
          linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(20, 14, 10, 0.95) 100%);
        border-bottom: 1px solid var(--border-subtle);
        box-shadow:
          inset 0 -1px 0 rgba(212, 165, 116, 0.05),
          0 4px 20px rgba(0, 0, 0, 0.3);
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .mobile-header__brand {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
      }

      .mobile-header__logo {
        font-family: "Bodoni Moda", serif;
        font-size: 1.5rem;
        font-weight: 900;
        font-style: italic;
        letter-spacing: 0.08em;
        background: linear-gradient(180deg, var(--brass) 0%, var(--copper) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
      }

      /* CDL Wordmark Nav - Mobile variant */
      .cdl-wordmark-nav--mobile {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 4px;
      }

      .cdl-wordmark-nav--mobile .cdl-wordmark-nav__line {
        width: 28px;
        height: 1px;
        background: linear-gradient(90deg, var(--brass), transparent);
      }

      .mobile-header__user {
        position: relative;
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg, var(--brass), var(--copper));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Bodoni Moda", serif;
        font-weight: 700;
        font-size: 1rem;
        color: var(--ink);
        border: none;
        cursor: pointer;
        /* Online glow effect */
        box-shadow:
          0 0 0 2px rgba(10, 7, 5, 0.8),
          0 0 12px rgba(212, 165, 116, 0.4);
      }

      /* Online indicator dot */
      .mobile-header__user::after {
        content: '';
        position: absolute;
        bottom: 0;
        right: 0;
        width: 10px;
        height: 10px;
        background: #4ade80;
        border: 2px solid #0a0705;
        border-radius: 50%;
        box-shadow: 0 0 6px rgba(74, 222, 128, 0.6);
      }

      /* Desktop Sidebar - HIDDEN on mobile */
      .admin-sidebar {
        display: none;
      }

      /* Main Content Area - Full width on mobile */
      .admin-main {
        flex: 1;
        min-height: 0;
        padding-bottom: 80px; /* Space for bottom nav */
        overflow-y: auto;
      }

      .admin-header {
        display: none; /* Use mobile header instead */
      }

      .admin-content {
        padding: 16px;
      }

      /* Mobile Bottom Navigation - with warm depth */
      .mobile-nav {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background:
          linear-gradient(0deg, rgba(20, 14, 10, 0.98) 0%, rgba(28, 19, 15, 0.95) 100%);
        border-top: 1px solid var(--border-subtle);
        box-shadow:
          inset 0 1px 0 rgba(212, 165, 116, 0.05),
          0 -4px 20px rgba(0, 0, 0, 0.3);
        display: flex;
        justify-content: space-around;
        padding: 8px 0;
        padding-bottom: max(8px, env(safe-area-inset-bottom));
        z-index: 100;
      }

      .mobile-nav__item {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        min-width: 60px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.5);
        transition: all 0.2s ease;
        -webkit-tap-highlight-color: transparent;
      }

      .mobile-nav__item.active {
        color: var(--brass);
      }

      /* Active indicator dot */
      .mobile-nav__item.active::after {
        content: '';
        position: absolute;
        bottom: 2px;
        left: 50%;
        transform: translateX(-50%);
        width: 4px;
        height: 4px;
        background: var(--brass);
        border-radius: 50%;
        box-shadow: 0 0 8px rgba(212, 165, 116, 0.6);
      }

      .mobile-nav__item:active {
        transform: scale(0.95);
      }

      /* Button reset for mobile nav items with children */
      button.mobile-nav__item {
        background: none;
        border: none;
        font-family: inherit;
        cursor: pointer;
      }

      .mobile-nav__icon {
        width: 24px;
        height: 24px;
      }

      .mobile-nav__label {
        font-size: 0.65rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;  /* Consistent sports broadcast tracking */
      }

      /* User Menu (mobile) */
      .user-menu {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        z-index: 200;
        display: flex;
        align-items: flex-end;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
      }

      .user-menu.open {
        opacity: 1;
        visibility: visible;
      }

      .user-menu__content {
        width: 100%;
        background:
          linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(20, 14, 10, 0.95) 100%);
        border-top: 1px solid var(--border-subtle);
        border-radius: 20px 20px 0 0;
        padding: 24px 20px;
        padding-bottom: max(24px, env(safe-area-inset-bottom));
        transform: translateY(100%);
        transition: transform 0.3s ease;
        box-shadow:
          inset 0 1px 0 rgba(212, 165, 116, 0.08),
          0 -8px 30px rgba(0, 0, 0, 0.4);
      }

      .user-menu.open .user-menu__content {
        transform: translateY(0);
      }

      .user-menu__header {
        display: flex;
        align-items: center;
        gap: 16px;
        padding-bottom: 20px;
        border-bottom: 1px solid var(--border-subtle);
        margin-bottom: 20px;
      }

      .user-menu__avatar {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, var(--brass), var(--copper));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Bodoni Moda", serif;
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--ink);
      }

      .user-menu__info {
        flex: 1;
      }

      .user-menu__name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
      }

      .user-menu__role {
        font-size: 0.75rem;
        color: var(--copper);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .user-menu__close {
        width: 44px;
        height: 44px;
        background: rgba(255, 255, 255, 0.1);
        border: none;
        border-radius: 50%;
        color: #fff;
        font-size: 1.2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .user-menu__actions {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      /* Super admin only elements - hidden by default */
      .super-admin-only {
        display: none !important;
      }

      .admin-layout.is-super-admin .super-admin-only {
        display: flex !important;
      }

      .user-menu__btn--settings {
        background: rgba(212, 165, 116, 0.1);
        color: var(--brass);
        border: 1px solid rgba(212, 165, 116, 0.3);
      }

      .user-menu__btn {
        width: 100%;
        padding: 16px 20px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        -webkit-tap-highlight-color: transparent;
      }

      .user-menu__btn--logout {
        background: rgba(244, 67, 54, 0.1);
        color: #e57373;
        border: 1px solid rgba(244, 67, 54, 0.3);
      }

      .user-menu__btn--back {
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.7);
        border: 1px solid var(--border-subtle);
      }

      /* Auth loading state - with atmospheric background */
      .auth-loading {
        position: fixed;
        inset: 0;
        background:
          radial-gradient(ellipse at 50% 0%, rgba(183, 106, 59, 0.12) 0%, transparent 50%),
          radial-gradient(ellipse at center, #1a120d 0%, #0a0705 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
      }

      .auth-loading.hidden {
        display: none;
      }

      .auth-spinner {
        width: 48px;
        height: 48px;
        border: 3px solid var(--border-subtle);
        border-top-color: var(--brass);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        box-shadow: 0 0 20px rgba(212, 165, 116, 0.2);
      }

      @keyframes spin {
        to { transform: rotate(360deg); }
      }

      /* ===== NAV POPUP (Mobile) ===== */
      .nav-popup-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        z-index: 150;
        opacity: 0;
        visibility: hidden;
        transition: all 0.25s ease;
      }

      .nav-popup-backdrop.open {
        opacity: 1;
        visibility: visible;
      }

      .nav-popup {
        position: fixed;
        left: 50%;
        bottom: 80px; /* Above bottom nav */
        bottom: calc(80px + env(safe-area-inset-bottom));
        transform: translateX(-50%) translateY(20px);
        background: linear-gradient(180deg, rgba(28, 19, 15, 0.98) 0%, rgba(20, 14, 10, 0.98) 100%);
        border: 1px solid var(--border-accent);
