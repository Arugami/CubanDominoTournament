---
// Admin Dashboard - The Tobias Way: Let the content be the interface
import AdminLayout from '../../components/admin/AdminLayout.astro';
---

<AdminLayout title="Dashboard" activeNav="dashboard">
  <div class="dashboard">
    <!-- Hero Stat - No Card, Just the Number -->
    <div class="dashboard-hero">
      <span class="hero-number" id="playerCount">0</span>
      <span class="hero-label">players</span>
      <div class="hero-context">
        <span id="teamCount">0</span> teams • <span id="matchCount">0</span>/7 matches
      </div>
    </div>

    <!-- Actions - Flow, Not Grid -->
    <div class="dashboard-actions">
      <a href="/admin/registrations" class="action-primary" id="primaryAction">
        + Add Your First Player
      </a>
      <div class="action-links">
        <a href="/admin/teams">Teams</a>
        <a href="/admin/bracket">Bracket</a>
        <a href="/admin/announcements">Ticker</a>
      </div>
    </div>

    <!-- Ticker Preview - Minimal -->
    <div class="ticker-preview" id="tickerPreview">
      <div class="ticker-line"></div>
      <div class="ticker-messages" id="tickerMessages">
        <span class="ticker-empty">No announcements</span>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  /* ===== DASHBOARD - Tobias Minimal ===== */
  .dashboard {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 8px;
    padding: 24px 0;
    min-height: calc(100dvh - 200px); /* header + nav + padding */
  }

  /* ===== HERO STAT - No Card, Just the Number ===== */
  .dashboard-hero {
    text-align: center;
    padding: 32px 20px 28px;
  }

  .hero-number {
    font-family: "Bodoni Moda", serif;
    font-size: 6rem;
    font-weight: 700;
    color: var(--brass);
    line-height: 1;
    display: block;
    /* Subtle glow - the artifact speaks */
    text-shadow: 0 0 60px rgba(212, 165, 116, 0.2);
  }

  .hero-label {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.4);
    text-transform: lowercase;
    letter-spacing: 0.15em;
    display: block;
    margin-top: 4px;
  }

  .hero-context {
    margin-top: 20px;
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.25);
    letter-spacing: 0.05em;
  }

  /* ===== ACTIONS - Flow, Not Grid ===== */
  .dashboard-actions {
    padding: 0 20px;
    margin-top: 8px;
  }

  .action-primary {
    display: block;
    width: 100%;
    max-width: 280px;
    margin: 0 auto 28px;
    padding: 16px 24px;
    text-align: center;
    background: linear-gradient(135deg, var(--brass), var(--copper));
    color: var(--ink);
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.25s ease;
    box-shadow: 0 4px 20px rgba(183, 106, 59, 0.3);
  }

  .action-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(183, 106, 59, 0.4);
  }

  .action-primary:active {
    transform: scale(0.98);
  }

  .action-links {
    display: flex;
    justify-content: center;
    gap: 24px;
  }

  .action-links a {
    color: rgba(255, 255, 255, 0.4);
    text-decoration: none;
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.85rem;
    letter-spacing: 0.02em;
    transition: color 0.2s ease;
  }

  .action-links a:hover {
    color: var(--brass);
  }

  /* ===== TICKER PREVIEW - Subtle ===== */
  .ticker-preview {
    padding: 16px 20px;
  }

  .ticker-line {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(212, 165, 116, 0.2), transparent);
    margin-bottom: 16px;
  }

  .ticker-messages {
    text-align: center;
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.3);
    min-height: 24px;
  }

  .ticker-empty {
    font-style: italic;
    color: rgba(255, 255, 255, 0.2);
  }

  .ticker-message {
    display: inline-block;
    padding: 0 12px;
  }

  .ticker-message::before {
    content: "•";
    margin-right: 12px;
    color: var(--copper);
    opacity: 0.5;
  }

  .ticker-message:first-child::before {
    display: none;
  }

  /* ===== DESKTOP REFINEMENTS ===== */
  @media (min-width: 769px) {
    .dashboard {
      padding: 40px 0;
    }

    .dashboard-hero {
      padding: 60px 20px 48px;
    }

    .hero-number {
      font-size: 8rem;
    }

    .hero-label {
      font-size: 1rem;
    }

    .hero-context {
      font-size: 0.85rem;
    }

    .action-primary {
      max-width: 320px;
      padding: 18px 28px;
      font-size: 0.95rem;
    }

    .action-links {
      gap: 40px;
    }

    .action-links a {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Wait for admin ready event from layout
  window.addEventListener('adminReady', async ({ detail: { supabase } }) => {
    await loadDashboardData(supabase);
  });

  async function loadDashboardData(supabase) {
    try {
      // Fetch all stats in parallel
      const [
        { count: playerCount },
        { count: teamCount },
        { data: matches },
        { data: announcements }
      ] = await Promise.all([
        supabase.from('players').select('*', { count: 'exact', head: true }),
        supabase.from('teams').select('*', { count: 'exact', head: true }),
        supabase.from('matches').select('*'),
        supabase.from('announcements').select('*').eq('is_active', true).limit(3)
      ]);

      // Update hero stats
      const count = playerCount || 0;
      document.getElementById('playerCount').textContent = count;
      document.getElementById('teamCount').textContent = teamCount || 0;

      const completedMatches = matches?.filter(m => m.status === 'completed').length || 0;
      const totalMatches = matches?.length || 7;
      document.getElementById('matchCount').textContent = completedMatches;

      // Update primary CTA based on state
      const primaryAction = document.getElementById('primaryAction');
      if (count > 0 && (teamCount || 0) === 0) {
        primaryAction.textContent = '+ Form Your First Team';
        primaryAction.href = '/admin/teams';
      } else if (count > 0) {
        primaryAction.textContent = '+ Add Player';
        primaryAction.href = '/admin/registrations';
      }

      // Update ticker preview
      const tickerMessages = document.getElementById('tickerMessages');
      if (announcements && announcements.length > 0) {
        tickerMessages.innerHTML = announcements.map(a =>
          `<span class="ticker-message">${a.content}</span>`
        ).join('');
      }

    } catch (err) {
      console.error('Failed to load dashboard data:', err);
    }
  }
</script>
