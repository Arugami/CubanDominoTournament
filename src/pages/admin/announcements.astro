<script>
  let announcements = [];
  let currentFilter = 'all';
  let editingAnnouncementId = null;

  window.addEventListener('adminReady', async ({ detail: { supabase } }) => {
    await loadData(supabase);
    setupEventListeners(supabase);
    setupRealtimePreview(supabase);
  });

  async function loadData(supabase) {
    const { data } = await supabase
      .from('announcements')
      .select('*')
      .order('priority', { ascending: false })
      .order('created_at', { ascending: false });

    announcements = data || [];
    renderAnnouncements();
    renderTickerPreview();
    updateStats();
  }

  function renderAnnouncements() {
    const container = document.getElementById('announcementsList');

    // Update filter tab counts
    const statusCounts = {
      all: announcements.length,
      active: announcements.filter(a => a.is_active).length,
      inactive: announcements.filter(a => !a.is_active).length
    };
    document.querySelectorAll('.status-tab').forEach(tab => {
      const status = tab.dataset.status;
      const count = statusCounts[status] || 0;
      const label = status.charAt(0).toUpperCase() + status.slice(1);
      tab.textContent = `${label} (${count})`;
    });

    let filtered = announcements;
    if (currentFilter === 'active') {
      filtered = filtered.filter(a => a.is_active);
    } else if (currentFilter === 'inactive') {
      filtered = filtered.filter(a => !a.is_active);
    }

    if (filtered.length === 0) {
      container.innerHTML = '<div class="empty-state">No announcements found</div>';
      return;
    }

    container.innerHTML = filtered.map(a => {
      const createdDate = new Date(a.created_at).toLocaleDateString('en-US', {
        month: 'short', day: 'numeric', year: 'numeric'
      });
      const expiresStr = a.expires_at
        ? ` | Expires: ${new Date(a.expires_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}`
        : '';

      const priorityLabels = ['Normal', 'High', 'Urgent'];
      const priorityClasses = ['', 'announcement-card__priority--high', 'announcement-card__priority--urgent'];

      return `
        <div class="announcement-card ${!a.is_active ? 'announcement-card--inactive' : ''}" data-id="${a.id}">
          <div class="announcement-card__status ${!a.is_active ? 'announcement-card__status--inactive' : ''}"></div>
          <div class="announcement-card__content">
            <div class="announcement-card__header">
              <span class="announcement-card__type announcement-card__type--${a.type}">${a.type}</span>
              <span class="announcement-card__priority ${priorityClasses[a.priority || 0]}">
                ${priorityLabels[a.priority || 0]} priority
              </span>
            </div>
            <p class="announcement-card__text">${a.content}</p>
            <div class="announcement-card__meta">
              Created ${createdDate}${expiresStr}
            </div>
          </div>
          <div class="announcement-card__actions">
            <button class="action-btn edit-btn" data-id="${a.id}">Edit</button>
            <button class="action-btn action-btn--delete delete-btn" data-id="${a.id}">Delete</button>
          </div>
        </div>
      `;
    }).join('');
  }

  function renderTickerPreview() {
    const ticker = document.getElementById('previewTicker');
    const container = document.getElementById('tickerContent');
    const active = announcements.filter(a => a.is_active);

    // Clear empty state indicator
    ticker.classList.remove('ticker-empty-state');

    if (active.length === 0) {
      // Show clear empty state instead of confusing ghost content
      ticker.classList.add('ticker-empty-state');
      container.innerHTML = `
        <span class="ticker-empty-message">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 16px; height: 16px; opacity: 0.5;">
            <path d="m3 11 18-5v12L3 13v-2z" />
            <path d="M11.6 16.8a3 3 0 1 1-5.8-1.6" />
          </svg>
          Your ticker is empty â€” add an announcement to get started
        </span>
      `;
      container.style.animation = 'none';
      return;
    }

    // Build ticker items - simple text, La Mesa style
    const items = active.map(a =>
      `<span class="ticker-item">${a.content}</span>`
    ).join('<span class="ticker-spacer"></span>');

    // Duplicate for seamless loop
    container.innerHTML = items + '<span class="ticker-spacer"></span>' + items + '<span class="ticker-spacer"></span>';
    container.style.animation = `tickerScroll ${Math.max(24, active.length * 6)}s linear infinite`;
  }

  function updateStats() {
    const statsEl = document.getElementById('announcementStats');
    const activeCount = announcements.filter(a => a.is_active).length;
    // Softer, more ambient stat display
    statsEl.textContent = activeCount > 0 ? `${activeCount} in ticker` : 'ticker empty';
  }

  function setupRealtimePreview(supabase) {
    // Subscribe to realtime changes
    supabase
      .channel('announcements-changes')
      .on('postgres_changes', { event: '*', schema: 'public', table: 'announcements' }, () => {
        loadData(supabase);
      })
      .subscribe();
  }

  function setupEventListeners(supabase) {
    const modal = document.getElementById('announcementModal');
    const deleteModal = document.getElementById('deleteModal');
    const form = document.getElementById('announcementForm');
    const contentInput = document.getElementById('announcementContent');
    const charCount = document.getElementById('charCount');

    // Character counter
    contentInput.addEventListener('input', () => {
      charCount.textContent = contentInput.value.length;
    });

    // Filter tabs
    document.querySelectorAll('.filter-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        currentFilter = tab.dataset.filter;
        renderAnnouncements();
      });
    });

    // Create announcement
    document.getElementById('createAnnouncementBtn').addEventListener('click', () => {
      editingAnnouncementId = null;
      document.getElementById('saveBtnText').textContent = 'Post to Ticker';
      form.reset();
      document.getElementById('announcementActive').checked = true;
      document.getElementById('advancedOptions').removeAttribute('open');
      charCount.textContent = '0';
      modal.classList.add('open');
    });

    // Close modal
    document.getElementById('closeModal').addEventListener('click', () => modal.classList.remove('open'));
    modal.addEventListener('click', (e) => {
      if (e.target === modal) modal.classList.remove('open');
    });

    // Edit/Delete from list
    document.getElementById('announcementsList').addEventListener('click', (e) => {
      if (e.target.classList.contains('edit-btn')) {
        const id = e.target.dataset.id;
        const announcement = announcements.find(a => a.id === id);
        if (announcement) {
          editingAnnouncementId = id;
          document.getElementById('saveBtnText').textContent = 'Save Changes';
          document.getElementById('announcementId').value = id;
          document.getElementById('announcementContent').value = announcement.content;
          document.getElementById('announcementType').value = announcement.type;
          document.getElementById('announcementPriority').value = announcement.priority || 0;
          document.getElementById('announcementActive').checked = announcement.is_active;

          if (announcement.expires_at) {
            const date = new Date(announcement.expires_at);
            document.getElementById('announcementExpires').value = date.toISOString().slice(0, 16);
          } else {
            document.getElementById('announcementExpires').value = '';
          }

          // Expand advanced options if non-default values
          if (announcement.type !== 'info' || announcement.priority > 0 || announcement.expires_at) {
            document.getElementById('advancedOptions').setAttribute('open', '');
          } else {
            document.getElementById('advancedOptions').removeAttribute('open');
          }

          charCount.textContent = announcement.content.length;
          modal.classList.add('open');
        }
      }

      if (e.target.classList.contains('delete-btn')) {
        const id = e.target.dataset.id;
        document.getElementById('confirmDelete').dataset.id = id;
        deleteModal.classList.add('open');
      }
    });

    // Form submit
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const expiresValue = document.getElementById('announcementExpires').value;

      const data = {
        content: document.getElementById('announcementContent').value.trim(),
        type: document.getElementById('announcementType').value,
        priority: parseInt(document.getElementById('announcementPriority').value),
        is_active: document.getElementById('announcementActive').checked,
        expires_at: expiresValue ? new Date(expiresValue).toISOString() : null
      };

      try {
        if (editingAnnouncementId) {
          await supabase.from('announcements').update(data).eq('id', editingAnnouncementId);
        } else {
          // Add created_by from current admin
          data.created_by = window.currentAdmin?.id || null;
          await supabase.from('announcements').insert(data);
        }

        modal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Save error:', err);
        alert('Failed to save announcement');
      }
    });

    // Delete confirmation
    document.getElementById('cancelDelete').addEventListener('click', () => deleteModal.classList.remove('open'));
    deleteModal.addEventListener('click', (e) => {
      if (e.target === deleteModal) deleteModal.classList.remove('open');
    });

    document.getElementById('confirmDelete').addEventListener('click', async () => {
      const id = document.getElementById('confirmDelete').dataset.id;
      try {
        await supabase.from('announcements').delete().eq('id', id);
        deleteModal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Delete error:', err);
        alert('Failed to delete announcement');
      }
    });
  }
</script>
