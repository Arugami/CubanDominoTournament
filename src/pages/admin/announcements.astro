---
// Admin Announcements - Ticker Message Manager
import AdminLayout from '../../components/admin/AdminLayout.astro';
---

<AdminLayout title="Ticker Messages" activeNav="announcements">
  <div class="announcements-page">
    <!-- Header Actions -->
    <div class="page-actions">
      <div class="announcement-info">
        <span id="announcementStats">Loading...</span>
      </div>
      <button class="btn btn--primary" id="createAnnouncementBtn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;">
          <line x1="12" y1="5" x2="12" y2="19" />
          <line x1="5" y1="12" x2="19" y2="12" />
        </svg>
        New Announcement
      </button>
    </div>

    <!-- Live Preview -->
    <div class="ticker-preview card">
      <div class="card__header">
        <h2 class="card__title">Live Ticker Preview</h2>
        <span class="preview-badge">Real-time</span>
      </div>
      <div class="preview-ticker" id="previewTicker">
        <div class="ticker-content" id="tickerContent">
          Loading announcements...
        </div>
      </div>
    </div>

    <!-- Announcements List -->
    <div class="card">
      <div class="card__header">
        <h2 class="card__title">All Announcements</h2>
        <div class="filter-tabs">
          <button class="filter-tab active" data-filter="all">All</button>
          <button class="filter-tab" data-filter="active">Active</button>
          <button class="filter-tab" data-filter="inactive">Inactive</button>
        </div>
      </div>
      <div class="announcements-list" id="announcementsList">
        <div class="loading-placeholder">Loading announcements...</div>
      </div>
    </div>
  </div>

  <!-- Create/Edit Announcement Modal -->
  <div class="modal-backdrop" id="announcementModal">
    <div class="modal">
      <div class="modal__header">
        <h2 class="modal__title" id="modalTitle">New Announcement</h2>
        <button class="modal__close" id="closeModal">&times;</button>
      </div>
      <form class="modal__body" id="announcementForm">
        <input type="hidden" id="announcementId" />

        <div class="form-group">
          <label class="form-label" for="announcementContent">Message *</label>
          <textarea
            id="announcementContent"
            class="input"
            rows="3"
            placeholder="Enter announcement text..."
            required
            maxlength="200"
          ></textarea>
          <div class="char-count"><span id="charCount">0</span>/200</div>
        </div>

        <div class="form-row">
          <div class="form-group form-group--half">
            <label class="form-label" for="announcementType">Type</label>
            <select id="announcementType" class="input">
              <option value="info">Info</option>
              <option value="alert">Alert</option>
              <option value="winner">Winner</option>
              <option value="hype">Hype</option>
            </select>
          </div>

          <div class="form-group form-group--half">
            <label class="form-label" for="announcementPriority">Priority</label>
            <select id="announcementPriority" class="input">
              <option value="0">Normal</option>
              <option value="1">High</option>
              <option value="2">Urgent</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label" for="announcementExpires">Expires At (Optional)</label>
          <input type="datetime-local" id="announcementExpires" class="input" />
          <div class="form-hint">Leave empty for no expiration</div>
        </div>

        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" id="announcementActive" checked />
            <span class="checkbox-text">Active (show in ticker)</span>
          </label>
        </div>

        <div class="modal__actions">
          <button type="button" class="btn btn--secondary" id="cancelBtn">Cancel</button>
          <button type="submit" class="btn btn--primary" id="saveBtn">Save Announcement</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal-backdrop" id="deleteModal">
    <div class="modal modal--sm">
      <div class="modal__header">
        <h2 class="modal__title">Delete Announcement</h2>
      </div>
      <div class="modal__body">
        <p>Are you sure you want to delete this announcement?</p>
        <p class="warning-text">This action cannot be undone.</p>
      </div>
      <div class="modal__actions">
        <button type="button" class="btn btn--secondary" id="cancelDelete">Cancel</button>
        <button type="button" class="btn btn--danger" id="confirmDelete">Delete</button>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  /* MOBILE-FIRST STYLES */
  .announcements-page {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .page-actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .announcement-info {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    text-align: center;
  }

  /* Ticker Preview */
  .ticker-preview {
    overflow: hidden;
  }

  .ticker-preview .card__header {
    flex-wrap: wrap;
    gap: 10px;
  }

  .preview-badge {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;  /* Consistent sports broadcast tracking */
    padding: 4px 10px;
    background: rgba(76, 175, 80, 0.15);
    color: #81c784;
    border-radius: 4px;
  }

  .preview-ticker {
    background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.5) 100%);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    padding: 14px 16px;
    overflow: hidden;
    position: relative;
  }

  .ticker-content {
    display: flex;
    align-items: center;
    gap: 30px;
    animation: scroll-ticker 20s linear infinite;
    white-space: nowrap;
  }

  @keyframes scroll-ticker {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .ticker-item {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.85);
  }

  .ticker-item__type {
    font-size: 0.6rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 3px 6px;
    border-radius: 4px;
    background: rgba(212, 165, 116, 0.15);
    color: var(--brass);
  }

  .ticker-item__type--alert {
    background: rgba(255, 152, 0, 0.15);
    color: #ffb74d;
  }

  .ticker-item__type--winner {
    background: rgba(255, 215, 0, 0.15);
    color: #ffd700;
  }

  .ticker-item__type--hype {
    background: rgba(156, 39, 176, 0.15);
    color: #ba68c8;
  }

  .ticker-separator {
    color: var(--copper);
    opacity: 0.5;
  }

  /* Filter Tabs - Horizontal scroll on mobile */
  .filter-tabs {
    display: flex;
    gap: 6px;
  }

  .filter-tab {
    padding: 6px 12px;
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.5);
    background: transparent;
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    white-space: nowrap;
  }

  .filter-tab:active {
    transform: scale(0.97);
  }

  .filter-tab.active {
    color: var(--brass);
    background: rgba(212, 165, 116, 0.1);
    border-color: var(--brass);
  }

  /* Announcements List */
  .announcements-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .announcement-card {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 14px;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border-subtle);
    border-radius: 10px;
    -webkit-tap-highlight-color: transparent;
  }

  .announcement-card--inactive {
    opacity: 0.5;
  }

  .announcement-card__status {
    display: none; /* Hide on mobile */
  }

  .announcement-card__content {
    flex: 1;
    min-width: 0;
  }

  .announcement-card__header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
    flex-wrap: wrap;
  }

  .announcement-card__type {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 4px 10px;
    border-radius: 4px;
    background: rgba(212, 165, 116, 0.15);
    color: var(--brass);
  }

  .announcement-card__type--alert {
    background: rgba(255, 152, 0, 0.15);
    color: #ffb74d;
  }

  .announcement-card__type--winner {
    background: rgba(255, 215, 0, 0.15);
    color: #ffd700;
  }

  .announcement-card__type--hype {
    background: rgba(156, 39, 176, 0.15);
    color: #ba68c8;
  }

  .announcement-card__priority {
    font-size: 0.65rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .announcement-card__priority--high {
    color: #ffb74d;
  }

  .announcement-card__priority--urgent {
    color: #e57373;
  }

  .announcement-card__text {
    font-size: 0.9rem;
    color: #fff;
    line-height: 1.5;
    margin-bottom: 8px;
  }

  .announcement-card__meta {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .announcement-card__actions {
    display: flex;
    gap: 8px;
    padding-top: 10px;
    border-top: 1px solid var(--border-subtle);
  }

  .action-btn {
    flex: 1;
    padding: 10px 14px;
    font-size: 0.85rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
  }

  .action-btn:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.1);
  }

  .action-btn--delete {
    color: #e57373;
    border-color: rgba(244, 67, 54, 0.3);
    background: rgba(244, 67, 54, 0.05);
  }

  .action-btn--delete:active {
    background: rgba(244, 67, 54, 0.15);
  }

  .loading-placeholder,
  .empty-state {
    padding: 24px;
    text-align: center;
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.9rem;
  }

  /* Modal Styles - Mobile */
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .modal-backdrop.open {
    opacity: 1;
    visibility: visible;
  }

  .modal {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 20px 20px 0 0;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .modal-backdrop.open .modal {
    transform: translateY(0);
  }

  .modal--sm {
    max-height: 50vh;
  }

  .modal__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    border-bottom: 1px solid var(--border-subtle);
    position: sticky;
    top: 0;
    background: var(--bg-card);
    z-index: 1;
  }

  .modal__title {
    font-family: "Bodoni Moda", serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--brass);
  }

  .modal__close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    border-radius: 50%;
    -webkit-tap-highlight-color: transparent;
  }

  .modal__body {
    padding: 20px;
    padding-bottom: max(20px, env(safe-area-inset-bottom));
  }

  .form-group {
    margin-bottom: 16px;
  }

  .form-row {
    display: flex;
    gap: 12px;
  }

  .form-group--half {
    flex: 1;
  }

  .form-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--brass);
    margin-bottom: 8px;
  }

  textarea.input {
    resize: vertical;
    min-height: 80px;
  }

  .char-count {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    text-align: right;
    margin-top: 4px;
  }

  .form-hint {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    margin-top: 4px;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    padding: 10px 0;
    -webkit-tap-highlight-color: transparent;
  }

  .checkbox-label input {
    width: 22px;
    height: 22px;
    accent-color: var(--brass);
  }

  .checkbox-text {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .modal__actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding-top: 16px;
    border-top: 1px solid var(--border-subtle);
    margin-top: 8px;
  }

  .modal__actions .btn {
    width: 100%;
    justify-content: center;
    padding: 14px 20px;
    font-size: 1rem;
  }

  .warning-text {
    color: #e57373;
    font-size: 0.85rem;
    margin-top: 8px;
  }

  /* ===== DESKTOP OVERRIDES (769px+) ===== */
  @media (min-width: 769px) {
    .announcements-page {
      gap: 24px;
    }

    .page-actions {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .announcement-info {
      font-size: 0.9rem;
      text-align: left;
    }

    .ticker-item {
      font-size: 0.9rem;
    }

    .ticker-item__type {
      font-size: 0.65rem;
      padding: 3px 8px;
    }

    .preview-ticker {
      padding: 16px 20px;
    }

    .filter-tab {
      padding: 6px 14px;
      font-size: 0.8rem;
      border-radius: 6px;
    }

    .filter-tab:hover {
      color: rgba(255, 255, 255, 0.8);
      background: rgba(255, 255, 255, 0.05);
    }

    .announcements-list {
      gap: 12px;
    }

    .announcement-card {
      flex-direction: row;
      align-items: flex-start;
      gap: 16px;
      padding: 16px;
    }

    .announcement-card:hover {
      border-color: var(--border-accent);
    }

    .announcement-card__status {
      display: block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background: #81c784;
      margin-top: 4px;
      flex-shrink: 0;
    }

    .announcement-card__status--inactive {
      background: rgba(255, 255, 255, 0.2);
    }

    .announcement-card__text {
      font-size: 0.95rem;
    }

    .announcement-card__meta {
      font-size: 0.75rem;
    }

    .announcement-card__actions {
      border-top: none;
      padding-top: 0;
      flex-shrink: 0;
    }

    .action-btn {
      flex: none;
      padding: 8px 12px;
      font-size: 0.75rem;
    }

    .action-btn:hover {
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    .action-btn--delete:hover {
      background: rgba(244, 67, 54, 0.1);
      border-color: rgba(244, 67, 54, 0.3);
      color: #e57373;
    }

    /* Modal - centered on desktop */
    .modal-backdrop {
      align-items: center;
    }

    .modal {
      border-radius: 16px;
      max-width: 500px;
      transform: translateY(20px);
    }

    .modal--sm {
      max-width: 380px;
      max-height: 90vh;
    }

    .modal__header {
      padding: 20px 24px;
    }

    .modal__body {
      padding: 24px;
    }

    .form-row {
      gap: 16px;
    }

    .modal__actions {
      flex-direction: row;
      justify-content: flex-end;
    }

    .modal__actions .btn {
      width: auto;
      padding: 10px 20px;
      font-size: 0.85rem;
    }

    .checkbox-label input {
      width: 18px;
      height: 18px;
    }

    .checkbox-text {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  let announcements = [];
  let currentFilter = 'all';
  let editingAnnouncementId = null;

  window.addEventListener('adminReady', async ({ detail: { supabase } }) => {
    await loadData(supabase);
    setupEventListeners(supabase);
    setupRealtimePreview(supabase);
  });

  async function loadData(supabase) {
    const { data } = await supabase
      .from('announcements')
      .select('*')
      .order('priority', { ascending: false })
      .order('created_at', { ascending: false });

    announcements = data || [];
    renderAnnouncements();
    renderTickerPreview();
    updateStats();
  }

  function renderAnnouncements() {
    const container = document.getElementById('announcementsList');

    let filtered = announcements;
    if (currentFilter === 'active') {
      filtered = filtered.filter(a => a.is_active);
    } else if (currentFilter === 'inactive') {
      filtered = filtered.filter(a => !a.is_active);
    }

    if (filtered.length === 0) {
      container.innerHTML = '<div class="empty-state">No announcements found</div>';
      return;
    }

    container.innerHTML = filtered.map(a => {
      const createdDate = new Date(a.created_at).toLocaleDateString('en-US', {
        month: 'short', day: 'numeric', year: 'numeric'
      });
      const expiresStr = a.expires_at
        ? ` | Expires: ${new Date(a.expires_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}`
        : '';

      const priorityLabels = ['Normal', 'High', 'Urgent'];
      const priorityClasses = ['', 'announcement-card__priority--high', 'announcement-card__priority--urgent'];

      return `
        <div class="announcement-card ${!a.is_active ? 'announcement-card--inactive' : ''}" data-id="${a.id}">
          <div class="announcement-card__status ${!a.is_active ? 'announcement-card__status--inactive' : ''}"></div>
          <div class="announcement-card__content">
            <div class="announcement-card__header">
              <span class="announcement-card__type announcement-card__type--${a.type}">${a.type}</span>
              <span class="announcement-card__priority ${priorityClasses[a.priority || 0]}">
                ${priorityLabels[a.priority || 0]} priority
              </span>
            </div>
            <p class="announcement-card__text">${a.content}</p>
            <div class="announcement-card__meta">
              Created ${createdDate}${expiresStr}
            </div>
          </div>
          <div class="announcement-card__actions">
            <button class="action-btn edit-btn" data-id="${a.id}">Edit</button>
            <button class="action-btn action-btn--delete delete-btn" data-id="${a.id}">Delete</button>
          </div>
        </div>
      `;
    }).join('');
  }

  function renderTickerPreview() {
    const container = document.getElementById('tickerContent');
    const active = announcements.filter(a => a.is_active);

    if (active.length === 0) {
      container.innerHTML = '<span style="color: rgba(255,255,255,0.4)">No active announcements</span>';
      container.style.animation = 'none';
      return;
    }

    // Duplicate content for seamless scrolling
    const items = active.map(a => `
      <span class="ticker-item">
        <span class="ticker-item__type ticker-item__type--${a.type}">${a.type}</span>
        ${a.content}
      </span>
      <span class="ticker-separator">|</span>
    `).join('');

    container.innerHTML = items + items; // Duplicate for seamless loop
    container.style.animation = `scroll-ticker ${Math.max(20, active.length * 8)}s linear infinite`;
  }

  function updateStats() {
    const statsEl = document.getElementById('announcementStats');
    const activeCount = announcements.filter(a => a.is_active).length;
    statsEl.textContent = `${activeCount} active | ${announcements.length} total announcements`;
  }

  function setupRealtimePreview(supabase) {
    // Subscribe to realtime changes
    supabase
      .channel('announcements-changes')
      .on('postgres_changes', { event: '*', schema: 'public', table: 'announcements' }, () => {
        loadData(supabase);
      })
      .subscribe();
  }

  function setupEventListeners(supabase) {
    const modal = document.getElementById('announcementModal');
    const deleteModal = document.getElementById('deleteModal');
    const form = document.getElementById('announcementForm');
    const contentInput = document.getElementById('announcementContent');
    const charCount = document.getElementById('charCount');

    // Character counter
    contentInput.addEventListener('input', () => {
      charCount.textContent = contentInput.value.length;
    });

    // Filter tabs
    document.querySelectorAll('.filter-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        currentFilter = tab.dataset.filter;
        renderAnnouncements();
      });
    });

    // Create announcement
    document.getElementById('createAnnouncementBtn').addEventListener('click', () => {
      editingAnnouncementId = null;
      document.getElementById('modalTitle').textContent = 'New Announcement';
      form.reset();
      document.getElementById('announcementActive').checked = true;
      charCount.textContent = '0';
      modal.classList.add('open');
    });

    // Close modal
    document.getElementById('closeModal').addEventListener('click', () => modal.classList.remove('open'));
    document.getElementById('cancelBtn').addEventListener('click', () => modal.classList.remove('open'));
    modal.addEventListener('click', (e) => {
      if (e.target === modal) modal.classList.remove('open');
    });

    // Edit/Delete from list
    document.getElementById('announcementsList').addEventListener('click', (e) => {
      if (e.target.classList.contains('edit-btn')) {
        const id = e.target.dataset.id;
        const announcement = announcements.find(a => a.id === id);
        if (announcement) {
          editingAnnouncementId = id;
          document.getElementById('modalTitle').textContent = 'Edit Announcement';
          document.getElementById('announcementId').value = id;
          document.getElementById('announcementContent').value = announcement.content;
          document.getElementById('announcementType').value = announcement.type;
          document.getElementById('announcementPriority').value = announcement.priority || 0;
          document.getElementById('announcementActive').checked = announcement.is_active;

          if (announcement.expires_at) {
            const date = new Date(announcement.expires_at);
            document.getElementById('announcementExpires').value = date.toISOString().slice(0, 16);
          } else {
            document.getElementById('announcementExpires').value = '';
          }

          charCount.textContent = announcement.content.length;
          modal.classList.add('open');
        }
      }

      if (e.target.classList.contains('delete-btn')) {
        const id = e.target.dataset.id;
        document.getElementById('confirmDelete').dataset.id = id;
        deleteModal.classList.add('open');
      }
    });

    // Form submit
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const expiresValue = document.getElementById('announcementExpires').value;

      const data = {
        content: document.getElementById('announcementContent').value.trim(),
        type: document.getElementById('announcementType').value,
        priority: parseInt(document.getElementById('announcementPriority').value),
        is_active: document.getElementById('announcementActive').checked,
        expires_at: expiresValue ? new Date(expiresValue).toISOString() : null
      };

      try {
        if (editingAnnouncementId) {
          await supabase.from('announcements').update(data).eq('id', editingAnnouncementId);
        } else {
          // Add created_by from current admin
          data.created_by = window.currentAdmin?.id || null;
          await supabase.from('announcements').insert(data);
        }

        modal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Save error:', err);
        alert('Failed to save announcement');
      }
    });

    // Delete confirmation
    document.getElementById('cancelDelete').addEventListener('click', () => deleteModal.classList.remove('open'));
    deleteModal.addEventListener('click', (e) => {
      if (e.target === deleteModal) deleteModal.classList.remove('open');
    });

    document.getElementById('confirmDelete').addEventListener('click', async () => {
      const id = document.getElementById('confirmDelete').dataset.id;
      try {
        await supabase.from('announcements').delete().eq('id', id);
        deleteModal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Delete error:', err);
        alert('Failed to delete announcement');
      }
    });
  }
</script>
