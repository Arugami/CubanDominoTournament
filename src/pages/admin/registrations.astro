      padding: 48px !important;
      color: rgba(255, 255, 255, 0.4);
    }

    .player-cell {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .player-avatar {
      width: 36px;
      height: 36px;
      font-size: 0.9rem;
    }

    .player-name {
      font-weight: 500;
    }

    .action-btns {
      display: flex;
      gap: 8px;
    }

    .action-btn {
      flex: none;
      padding: 6px 10px;
      font-size: 0.75rem;
    }

    .action-btn:hover {
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    .action-btn--delete:hover {
      background: rgba(244, 67, 54, 0.1);
      border-color: rgba(244, 67, 54, 0.3);
      color: #e57373;
    }

    .action-btn--team:hover {
      background: rgba(33, 150, 243, 0.15);
      border-color: rgba(33, 150, 243, 0.4);
      color: #64b5f6;
    }

    /* Modal - centered on desktop */
    .modal-backdrop {
      align-items: center;
    }

    .modal {
      border-radius: 16px;
      max-width: 480px;
      transform: translateY(20px);
    }

    .modal--sm {
      max-width: 380px;
      max-height: 90vh;
    }

    .modal__header {
      padding: 20px 24px;
    }

    .modal__body {
      padding: 24px;
    }

    .modal__actions {
      flex-direction: row;
      justify-content: flex-end;
    }

    .modal__actions .btn {
      width: auto;
      padding: 10px 20px;
      font-size: 0.85rem;
    }
  }
</style>

<script>
  let players = [];
  let teams = [];
  let currentFilter = 'all';
  let searchQuery = '';
  let editingPlayerId = null;
  let assigningPlayerId = null;

  window.addEventListener('adminReady', async ({ detail: { supabase } }) => {
    await loadData(supabase);
    setupEventListeners(supabase);
  });

  async function loadData(supabase) {
    const [playersRes, teamsRes] = await Promise.all([
      supabase.from('players').select('*').order('created_at', { ascending: false }),
      supabase.from('teams').select('*')
    ]);

    players = playersRes.data || [];
    teams = teamsRes.data || [];
    renderPlayers();
  }

  function renderPlayers() {
    const tbody = document.getElementById('playersBody');
    const cardsEl = document.getElementById('playersCards');
    const countEl = document.getElementById('playerCount');
    const contextEl = document.getElementById('playerContext');

    // Update hero stat
    countEl.textContent = players.length;
    const statusCounts = {
      all: players.length,
      confirmed: players.filter(p => p.status === 'confirmed').length,
      registered: players.filter(p => p.status === 'registered').length,
      waitlist: players.filter(p => p.status === 'waitlist').length,
      cancelled: players.filter(p => p.status === 'cancelled').length
    };
    const parts = [];
    if (statusCounts.confirmed > 0) parts.push(`${statusCounts.confirmed} confirmed`);
    if (statusCounts.registered > 0) parts.push(`${statusCounts.registered} registered`);
    if (statusCounts.waitlist > 0) parts.push(`${statusCounts.waitlist} waitlist`);
    contextEl.textContent = parts.length > 0 ? parts.join(' · ') : 'no registrations yet';

    // Update filter tab counts
    document.querySelectorAll('.status-tab').forEach(tab => {
      const status = tab.dataset.status;
      const count = statusCounts[status] || 0;
      const label = status.charAt(0).toUpperCase() + status.slice(1);
      tab.textContent = `${label} (${count})`;
    });

    // Filter players
    let filtered = players;
    if (currentFilter !== 'all') {
      filtered = filtered.filter(p => p.status === currentFilter);
    }
    if (searchQuery) {
      const q = searchQuery.toLowerCase();
      filtered = filtered.filter(p =>
        p.name.toLowerCase().includes(q) ||
        p.email.toLowerCase().includes(q)
      );
    }

    if (filtered.length === 0) {
      tbody.innerHTML = `<tr><td colspan="7" class="empty-cell"></td></tr>`;
      cardsEl.innerHTML = `<div class="empty-state"><svg class="empty-state__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg></div>`;
      return;
    }

    // Render mobile cards
    cardsEl.innerHTML = filtered.map(player => {
      const team = teams.find(t => t.id === player.team_id);
      return `
        <div class="player-card" data-id="${player.id}">
          <div class="player-card__header">
            <div class="player-avatar">${player.name[0].toUpperCase()}</div>
            <div class="player-card__info">
              <div class="player-card__name">${player.name}</div>
              <div class="player-card__email">${player.email}</div>
            </div>
          </div>
          <div class="player-card__meta">
            <span class="badge badge--${player.status}">${player.status}</span>
            ${team
              ? `<span class="team-badge">${team.name}</span>`
              : `<span class="team-badge team-badge--none">Unassigned</span>`
            }
          </div>
          <div class="player-card__actions">
            <button class="action-btn action-btn--team team-assign-btn" data-id="${player.id}">→ Team</button>
            <button class="action-btn edit-btn" data-id="${player.id}">Edit</button>
            <button class="action-btn action-btn--delete delete-btn" data-id="${player.id}">Delete</button>
          </div>
        </div>
      `;
    }).join('');

    // Render desktop table
    tbody.innerHTML = filtered.map(player => {
      const team = teams.find(t => t.id === player.team_id);
      const dateStr = new Date(player.created_at).toLocaleDateString('en-US', {
        month: 'short', day: 'numeric', year: 'numeric'
      });

      return `
        <tr data-id="${player.id}">
          <td>
            <div class="player-cell">
              <div class="player-avatar">${player.name[0].toUpperCase()}</div>
              <span class="player-name">${player.name}</span>
            </div>
          </td>
          <td>${player.email}</td>
          <td>${player.phone || '-'}</td>
          <td>
            ${team
              ? `<span class="team-badge">${team.name}</span>`
              : `<span class="team-badge team-badge--none">Unassigned</span>`
            }
          </td>
          <td><span class="badge badge--${player.status}">${player.status}</span></td>
          <td>${dateStr}</td>
          <td>
            <div class="action-btns">
              <button class="action-btn action-btn--team team-assign-btn" data-id="${player.id}">→ Team</button>
              <button class="action-btn edit-btn" data-id="${player.id}">Edit</button>
              <button class="action-btn action-btn--delete delete-btn" data-id="${player.id}">Delete</button>
            </div>
          </td>
        </tr>
      `;
    }).join('');

  }

  function setupEventListeners(supabase) {
    const modal = document.getElementById('playerModal');
    const deleteModal = document.getElementById('deleteModal');
    const form = document.getElementById('playerForm');
    const searchInput = document.getElementById('searchInput');

    // Search
    searchInput.addEventListener('input', (e) => {
      searchQuery = e.target.value;
      renderPlayers();
    });

    // Status tabs
    document.querySelectorAll('.status-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.status-tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        currentFilter = tab.dataset.status;
        renderPlayers();
      });
    });

    // Add player button
    document.getElementById('addPlayerBtn').addEventListener('click', () => {
      editingPlayerId = null;
      document.getElementById('modalTitle').textContent = 'Add Player';
      form.reset();
      modal.classList.add('open');
    });

    // Close modal
    document.getElementById('closeModal').addEventListener('click', () => modal.classList.remove('open'));
    document.getElementById('cancelBtn').addEventListener('click', () => modal.classList.remove('open'));
    modal.addEventListener('click', (e) => {
      if (e.target === modal) modal.classList.remove('open');
    });

    // Edit/Delete player - handle both mobile cards and desktop table
    function handlePlayerAction(e) {
      if (e.target.classList.contains('edit-btn')) {
        const id = e.target.dataset.id;
        const player = players.find(p => p.id === id);
        if (player) {
          editingPlayerId = id;
          document.getElementById('modalTitle').textContent = 'Edit Player';
          document.getElementById('playerId').value = id;
          document.getElementById('playerName').value = player.name;
          document.getElementById('playerEmail').value = player.email;
          document.getElementById('playerPhone').value = player.phone || '';
          document.getElementById('playerStatus').value = player.status;
          document.getElementById('playerNotes').value = player.notes || '';
          modal.classList.add('open');
        }
      }

      if (e.target.classList.contains('delete-btn')) {
        const id = e.target.dataset.id;
        const player = players.find(p => p.id === id);
        if (player) {
          document.getElementById('deletePlayerName').textContent = player.name;
          // Show team assignment info in delete warning
          const team = teams.find(t => t.id === player.team_id);
          const detailsEl = document.getElementById('deleteDetails');
          if (team) {
            detailsEl.textContent = `This player is assigned to ${team.name}.`;
          } else {
            detailsEl.textContent = '';
          }
          document.getElementById('confirmDelete').dataset.id = id;
          deleteModal.classList.add('open');
        }
      }

      if (e.target.classList.contains('team-assign-btn')) {
        const id = e.target.dataset.id;
        const player = players.find(p => p.id === id);
        if (player) {
          openTeamAssignModal(player);
        }
      }
    }

    // Listen on both mobile cards and desktop table
    document.getElementById('playersBody').addEventListener('click', handlePlayerAction);
    document.getElementById('playersCards').addEventListener('click', handlePlayerAction);

    // Team Assign Modal
    const teamAssignModal = document.getElementById('teamAssignModal');
    const closeTeamAssign = document.getElementById('closeTeamAssign');

    function openTeamAssignModal(player) {
      assigningPlayerId = player.id;
      document.getElementById('assignPlayerAvatar').textContent = player.name[0].toUpperCase();
      document.getElementById('assignPlayerName').textContent = player.name;

      // Build team options
      const optionsContainer = document.getElementById('teamOptions');

      // Find teams with available slots
      const teamsWithSlots = teams.map(team => {
        const hasPlayer1 = team.player1_id !== null;
        const hasPlayer2 = team.player2_id !== null;
        const isFull = hasPlayer1 && hasPlayer2;
        const isCurrentPlayerInTeam = team.player1_id === player.id || team.player2_id === player.id;
        const slotsUsed = (hasPlayer1 ? 1 : 0) + (hasPlayer2 ? 1 : 0);
        return { ...team, isFull, isCurrentPlayerInTeam, slotsUsed };
      });

      if (teamsWithSlots.length === 0) {
        optionsContainer.innerHTML = `
          <div class="team-assign-empty">
            <p>No teams created yet</p>
            <a href="/admin/teams" class="btn btn--primary" style="margin-top: 12px;">Create Teams</a>
          </div>
        `;
      } else {
        optionsContainer.innerHTML = teamsWithSlots.map(team => `
          <div class="team-option ${team.isFull && !team.isCurrentPlayerInTeam ? 'team-option--full' : ''}"
               data-team-id="${team.id}"
               data-is-full="${team.isFull && !team.isCurrentPlayerInTeam}">
            <div class="team-option__info">
              <span class="team-option__name">${team.name}</span>
              <span class="team-option__slots ${!team.isFull || team.isCurrentPlayerInTeam ? 'team-option__slots--available' : ''}">
                ${team.isCurrentPlayerInTeam ? 'Currently assigned' : `${team.slotsUsed}/2 players`}
              </span>
            </div>
            ${team.seed ? `<span class="team-option__seed">#${team.seed}</span>` : ''}
          </div>
        `).join('') + `
          <a href="/admin/teams" class="team-option team-option--create">
            <span class="team-option__name">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;">
                <line x1="12" y1="5" x2="12" y2="19" />
                <line x1="5" y1="12" x2="19" y2="12" />
              </svg>
              Create New Team
            </span>
          </a>
        `;
      }

      teamAssignModal.classList.add('open');
    }

    closeTeamAssign.addEventListener('click', () => teamAssignModal.classList.remove('open'));
    teamAssignModal.addEventListener('click', (e) => {
      if (e.target === teamAssignModal) teamAssignModal.classList.remove('open');
    });

    // Handle team selection
    document.getElementById('teamOptions').addEventListener('click', async (e) => {
      const teamOption = e.target.closest('.team-option');
      if (!teamOption || teamOption.classList.contains('team-option--create')) return;
      if (teamOption.dataset.isFull === 'true') return;

      const teamId = teamOption.dataset.teamId;
      const team = teams.find(t => t.id === teamId);
      if (!team || !assigningPlayerId) return;

      try {
        // First, remove player from any existing team assignment
        const currentPlayer = players.find(p => p.id === assigningPlayerId);
        if (currentPlayer?.team_id) {
          const oldTeam = teams.find(t => t.id === currentPlayer.team_id);
          if (oldTeam) {
            if (oldTeam.player1_id === assigningPlayerId) {
              await supabase.from('teams').update({ player1_id: null }).eq('id', oldTeam.id);
            } else if (oldTeam.player2_id === assigningPlayerId) {
              await supabase.from('teams').update({ player2_id: null }).eq('id', oldTeam.id);
            }
          }
        }

        // Assign to new team (fill first available slot)
        const slot = team.player1_id === null ? 'player1_id' : 'player2_id';
        await supabase.from('teams').update({ [slot]: assigningPlayerId }).eq('id', teamId);

        // Update player's team_id reference
        await supabase.from('players').update({ team_id: teamId }).eq('id', assigningPlayerId);

        teamAssignModal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Team assign error:', err);
        alert('Failed to assign player to team');
      }
    });

    // Form submit
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const playerData = {
        name: document.getElementById('playerName').value.trim(),
        email: document.getElementById('playerEmail').value.trim().toLowerCase(),
        phone: document.getElementById('playerPhone').value.trim() || null,
        status: document.getElementById('playerStatus').value,
        notes: document.getElementById('playerNotes').value.trim() || null
      };

      try {
        if (editingPlayerId) {
          await supabase.from('players').update(playerData).eq('id', editingPlayerId);
        } else {
          await supabase.from('players').insert(playerData);
        }

        modal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Save error:', err);
        alert('Failed to save player');
      }
    });

    // Delete confirmation
    document.getElementById('cancelDelete').addEventListener('click', () => deleteModal.classList.remove('open'));
    deleteModal.addEventListener('click', (e) => {
      if (e.target === deleteModal) deleteModal.classList.remove('open');
    });

    document.getElementById('confirmDelete').addEventListener('click', async () => {
      const id = document.getElementById('confirmDelete').dataset.id;
      try {
        await supabase.from('players').delete().eq('id', id);
        deleteModal.classList.remove('open');
        await loadData(supabase);
      } catch (err) {
        console.error('Delete error:', err);
        alert('Failed to delete player');
      }
    });
  }
</script>
