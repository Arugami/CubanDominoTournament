---
// Admin Registrations - Player Management
import AdminLayout from '../../components/admin/AdminLayout.astro';
---

<AdminLayout title="Registrations" activeNav="registrations">
  <div class="registrations-page">
    <!-- Hero Stat -->
    <div class="page-hero">
      <span class="hero-number" id="playerCount">0</span>
      <span class="hero-label">players</span>
      <div class="hero-context" id="playerContext">loading...</div>
    </div>

    <!-- Actions Row -->
    <div class="page-actions">
      <div class="search-box">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8" />
          <path d="m21 21-4.35-4.35" />
        </svg>
        <input
          type="text"
          id="searchInput"
          class="input"
          placeholder="Search..."
        />
      </div>
      <button class="btn btn--primary" id="addPlayerBtn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 18px; height: 18px;">
          <line x1="12" y1="5" x2="12" y2="19" />
          <line x1="5" y1="12" x2="19" y2="12" />
        </svg>
        Add
      </button>
    </div>

    <!-- Subtle Filter Links -->
    <div class="status-tabs">
      <button class="status-tab active" data-status="all">All</button>
      <button class="status-tab" data-status="registered">Registered</button>
      <button class="status-tab" data-status="confirmed">Confirmed</button>
      <button class="status-tab" data-status="waitlist">Waitlist</button>
      <button class="status-tab" data-status="cancelled">Cancelled</button>
    </div>

    <!-- Mobile Card View -->
    <div class="players-cards" id="playersCards">
      <div class="loading-placeholder">Loading players...</div>
    </div>

    <!-- Desktop Table View - no wrapper -->
    <table class="players-table" id="playersTable">
      <thead>
        <tr>
          <th>Player</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Team</th>
          <th>Status</th>
          <th>Registered</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="playersBody">
        <tr>
          <td colspan="7" class="loading-cell">Loading players...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Add/Edit Player Modal -->
  <div class="modal-backdrop" id="playerModal">
    <div class="modal">
      <div class="modal__header">
        <h2 class="modal__title" id="modalTitle">Add Player</h2>
        <button class="modal__close" id="closeModal">&times;</button>
      </div>
      <form class="modal__body" id="playerForm">
        <input type="hidden" id="playerId" />

        <div class="form-group">
          <label class="form-label" for="playerName">Full Name *</label>
          <input type="text" id="playerName" class="input" required />
        </div>

        <div class="form-group">
          <label class="form-label" for="playerEmail">Email *</label>
          <input type="email" id="playerEmail" class="input" required />
        </div>

        <div class="form-group">
          <label class="form-label" for="playerPhone">Phone</label>
          <input type="tel" id="playerPhone" class="input" />
        </div>

        <div class="form-group">
          <label class="form-label" for="playerStatus">Status</label>
          <select id="playerStatus" class="input">
            <option value="registered">Registered</option>
            <option value="confirmed">Confirmed</option>
            <option value="waitlist">Waitlist</option>
            <option value="cancelled">Cancelled</option>
          </select>
        </div>

        <div class="form-group">
          <label class="form-label" for="playerNotes">Notes</label>
          <textarea id="playerNotes" class="input" rows="3"></textarea>
        </div>

        <div class="modal__actions modal__actions--sticky">
          <button type="button" class="btn btn--secondary" id="cancelBtn">Cancel</button>
          <button type="submit" class="btn btn--primary btn-slam" id="saveBtn">Save Player</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal-backdrop" id="deleteModal">
    <div class="modal modal--sm">
      <div class="modal__header">
        <h2 class="modal__title">Confirm Delete</h2>
      </div>
      <div class="modal__body">
        <p>Are you sure you want to delete <strong id="deletePlayerName"></strong>?</p>
        <p class="delete-details" id="deleteDetails"></p>
        <p class="warning-text">This action cannot be undone.</p>
      </div>
      <div class="modal__actions">
        <button type="button" class="btn btn--secondary" id="cancelDelete">Cancel</button>
        <button type="button" class="btn btn--danger" id="confirmDelete">Delete Player</button>
      </div>
    </div>
  </div>

  <!-- Quick Team Assign Modal -->
  <div class="modal-backdrop" id="teamAssignModal">
    <div class="modal modal--team-assign">
      <div class="modal__header">
        <h2 class="modal__title">Assign to Team</h2>
        <button class="modal__close" id="closeTeamAssign">&times;</button>
      </div>
      <div class="modal__body">
        <div class="assign-player-info" id="assignPlayerInfo">
          <div class="assign-player-avatar" id="assignPlayerAvatar">?</div>
          <div class="assign-player-name" id="assignPlayerName">Player Name</div>
        </div>
        <div class="team-options" id="teamOptions">
          <!-- Teams will be populated here -->
        </div>
        <div class="team-assign-hint">Select a team or create a new one</div>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  /* MOBILE-FIRST STYLES */
  .registrations-page {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  /* Hero Stat - Tobias style */
  .page-hero {
    text-align: center;
    padding: 24px 20px 16px;
  }

  .page-hero .hero-number {
    font-family: "Bodoni Moda", serif;
    font-size: 4rem;
    font-weight: 700;
    color: var(--brass);
    line-height: 1;
    display: block;
    text-shadow: 0 0 40px rgba(212, 165, 116, 0.15);
  }

  .page-hero .hero-label {
    font-family: "IBM Plex Sans", sans-serif;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.4);
    text-transform: lowercase;
    letter-spacing: 0.1em;
    display: block;
    margin-top: 4px;
  }

  .page-hero .hero-context {
    margin-top: 12px;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.25);
  }

  /* Page Actions - Stack on mobile */
  .page-actions {
    display: flex;
    flex-direction: row;
    gap: 12px;
    align-items: center;
  }

  .search-box {
    position: relative;
    flex: 1;
  }

  .search-icon {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    width: 18px;
    height: 18px;
    color: rgba(255, 255, 255, 0.3);
    pointer-events: none;
  }

  .search-box .input {
    padding-left: 42px;
  }

  /* Status Tabs - Subtle text links */
  .status-tabs {
    display: flex;
    gap: 4px;
    padding-bottom: 8px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    margin: 0 -16px;
    padding: 0 16px 8px;
  }

  .status-tabs::-webkit-scrollbar {
    display: none;
  }

  .status-tab {
    padding: 6px 12px;
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.35);
    background: transparent;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    flex-shrink: 0;
    -webkit-tap-highlight-color: transparent;
  }

  .status-tab:active {
    transform: scale(0.97);
  }

  .status-tab.active {
    color: rgba(255, 255, 255, 0.7);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Mobile Card View */
  .players-cards {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .players-table {
    display: none;
  }

  .player-card {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    padding: 16px;
    -webkit-tap-highlight-color: transparent;
  }

  .player-card__header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .player-avatar {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--brass), var(--copper));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Bodoni Moda", serif;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--ink);
    flex-shrink: 0;
  }

  .player-card__info {
    flex: 1;
    min-width: 0;
  }

  .player-card__name {
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 2px;
  }

  .player-card__email {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .player-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 12px;
  }

  .player-card__actions {
    display: flex;
    gap: 8px;
    padding-top: 12px;
    border-top: 1px solid var(--border-subtle);
  }

  .action-btn {
    flex: 1;
    padding: 10px 16px;
    font-size: 0.85rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.2s ease;
    -webkit-tap-highlight-color: transparent;
  }

  .action-btn:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.1);
  }

  .action-btn--delete {
    color: #e57373;
    border-color: rgba(244, 67, 54, 0.3);
    background: rgba(244, 67, 54, 0.05);
  }

  .action-btn--delete:active {
    background: rgba(244, 67, 54, 0.15);
  }

  .team-badge {
    display: inline-block;
    padding: 4px 10px;
    font-size: 0.75rem;
    background: rgba(33, 150, 243, 0.1);
    color: #64b5f6;
    border-radius: 4px;
  }

  .team-badge--none {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.3);
  }

  .loading-placeholder {
    text-align: center;
    padding: 48px 16px;
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.9rem;
  }

  /* Empty state - visual, not verbal */
  /* :global() needed because these elements are JS-generated */
  :global(.empty-state) {
    text-align: center;
    padding: 48px 16px;
  }

  :global(.empty-state__icon) {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    opacity: 0.2;
  }

  /* Modal Styles - Full screen on mobile */
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .modal-backdrop.open {
    opacity: 1;
    visibility: visible;
  }

  .modal {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: 20px 20px 0 0;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .modal-backdrop.open .modal {
    transform: translateY(0);
  }

  .modal--sm {
    max-height: 50vh;
  }

  .modal__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    border-bottom: 1px solid var(--border-subtle);
    position: sticky;
    top: 0;
    background: var(--bg-card);
    z-index: 1;
  }

  .modal__title {
    font-family: "Bodoni Moda", serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--brass);
  }

  .modal__close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    border-radius: 50%;
    -webkit-tap-highlight-color: transparent;
  }

  .modal__body {
    padding: 20px;
    padding-bottom: max(20px, env(safe-area-inset-bottom));
  }

  .form-group {
    margin-bottom: 16px;
  }

  .form-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--brass);
    margin-bottom: 8px;
  }

  textarea.input {
    resize: vertical;
    min-height: 80px;
  }

  .modal__actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding-top: 16px;
    border-top: 1px solid var(--border-subtle);
    margin-top: 8px;
  }

  .modal__actions .btn {
    width: 100%;
    justify-content: center;
    padding: 14px 20px;
    font-size: 1rem;
  }

  .warning-text {
    color: #e57373;
    font-size: 0.85rem;
    margin-top: 8px;
  }

  .delete-details {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 8px;
  }

  /* Quick Team Assign Modal */
  .modal--team-assign {
    max-height: 70vh;
  }

  .assign-player-info {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 12px;
    margin-bottom: 16px;
  }

  .assign-player-avatar {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--brass), var(--copper));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Bodoni Moda", serif;
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--ink);
    flex-shrink: 0;
  }

  .assign-player-name {
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
  }

  .team-options {
    display: flex;
    flex-direction: column;
    gap: 8px;
    max-height: 280px;
    overflow-y: auto;
    padding-right: 4px;
  }

  .team-option {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    -webkit-tap-highlight-color: transparent;
  }

  .team-option:active {
    transform: scale(0.98);
  }

  .team-option:hover {
    border-color: var(--border-accent);
    background: rgba(255, 255, 255, 0.05);
  }

  .team-option--full {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .team-option--full:hover {
    border-color: var(--border-subtle);
    background: rgba(255, 255, 255, 0.03);
  }

  .team-option__info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .team-option__name {
    font-size: 0.95rem;
    font-weight: 600;
    color: #fff;
  }

  .team-option__slots {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .team-option__slots--available {
    color: #81c784;
  }

  .team-option__seed {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    padding: 3px 8px;
    background: rgba(255, 193, 7, 0.1);
    color: #ffc107;
    border-radius: 4px;
  }

  .team-option--create {
    border-style: dashed;
    justify-content: center;
  }

  .team-option--create .team-option__name {
    color: var(--brass);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .team-assign-hint {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.3);
    text-align: center;
    margin-top: 12px;
  }

  .team-assign-empty {
    text-align: center;
    padding: 24px;
    color: rgba(255, 255, 255, 0.4);
  }

  /* Team Assign Button in Cards */
  .action-btn--team {
    color: #64b5f6;
    border-color: rgba(33, 150, 243, 0.3);
    background: rgba(33, 150, 243, 0.05);
  }

  .action-btn--team:active {
    background: rgba(33, 150, 243, 0.15);
  }

  /* ===== DESKTOP OVERRIDES (769px+) ===== */
  @media (min-width: 769px) {
    .registrations-page {
      gap: 20px;
    }

    .page-hero {
      padding: 32px 20px 20px;
    }

    .page-hero .hero-number {
      font-size: 5rem;
    }

    .page-actions {
      flex-direction: row;
      align-items: center;
    }

    .search-box {
      max-width: 320px;
    }

    .status-tabs {
      margin: 0;
      padding: 0;
      overflow: visible;
    }

    .status-tab {
      padding: 6px 14px;
      font-size: 0.8rem;
    }

    .status-tab:hover {
      color: rgba(255, 255, 255, 0.6);
    }

    /* Hide mobile cards, show table */
    .players-cards {
      display: none;
    }

    .players-table {
      display: table;
      width: 100%;
      border-collapse: collapse;
    }

    .players-table th {
      text-align: left;
      padding: 12px 16px;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
