      border-bottom: 1px solid var(--border-subtle);
    }

    .players-table td {
      padding: 12px 16px;
      font-size: 0.85rem;
      border-bottom: 1px solid var(--border-subtle);
      color: rgba(255, 255, 255, 0.8);
    }

    .players-table tr:hover td {
      background: rgba(255, 255, 255, 0.02);
    }

    /* Table Styling */
    .loading-cell,
    .empty-cell {
