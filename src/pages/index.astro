      /* Hover locks bloom to full */
      .back-to-top:hover .back-to-top__pip::after,
      .back-to-top:focus .back-to-top__pip::after {
        animation: none;
        opacity: 1;
      }

      .back-to-top:active .back-to-top__pip {
        transform: scale(0.9);
      }

