      if (musicToggleEl && heroPanelEl) {
        const heroObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            const isMobile = window.innerWidth <= 768;
            if (isMobile) {
              if (entry.isIntersecting) {
                // Hero is visible - show music toggle
                musicToggleEl.classList.remove('hidden-past-hero');
              } else {
                // Hero is not visible - hide music toggle
                musicToggleEl.classList.add('hidden-past-hero');
              }
            }
          });
        }, { threshold: 0.3 });

        heroObserver.observe(heroPanelEl);
