      /* Chat Widget - The Sacred Table (Amber Glass & Brass) */
      .chat-widget--hidden {
        display: none !important;
      }

      .chat-widget {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 10001; /* Must be higher than chat-backdrop (10000) */
        font-family: "IBM Plex Sans", sans-serif;
        background: transparent;
