      const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRxdnRxZXppZHhvZHZ1eGt0dHVnIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjgxNzEzOTIsImV4cCI6MjA4Mzc0NzM5Mn0.qd93btCuZixx24oOMR0SRZwFJkf1NCk4fFiZD8e0LsU';

