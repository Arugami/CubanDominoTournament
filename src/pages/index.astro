      .chat-toggle__icon {
        display: none;
      }

      .chat-toggle__badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: var(--copper);
        color: #fff;
        font-family: "Bodoni Moda", serif;
        font-size: 0.75rem;
