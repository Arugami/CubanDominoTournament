      /* Tobias: Bevel/texture overlay for material conviction */
      .mesa-ticker__chat-btn::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(
          145deg,
          rgba(255,255,255,0.12) 0%,
          transparent 40%,
          transparent 60%,
          rgba(0,0,0,0.08) 100%
        );
        pointer-events: none;
