      }

      /* Tobias: Slower stagger for ritual weight (0ms → 720ms spread) */
      .chat-identity__title { animation-delay: 0ms; }
      .chat-identity__subtitle { animation-delay: 100ms; }
      .mesa-live-indicator { animation-delay: 200ms; }
      .avatar-selector { animation-delay: 340ms; }
      .chat-identity__select { animation-delay: 480ms; }
      .chat-identity__input { animation-delay: 480ms; }
