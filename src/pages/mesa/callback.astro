---
const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL;
const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CDL:1 • La Mesa</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <style>
      @font-face {
        font-family: 'SF Sports Night';
        src: url('/FONT/sf-sports-night/TrueType/SFSportsNight.woff2') format('woff2'),
             url('/FONT/sf-sports-night/TrueType/SFSportsNight.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      :root {
        color-scheme: dark;
        --ink: #1c130f;
        --brass: #d4a574;
        --copper: #b76a3b;
        --cream: #f8efe6;
        --border: #3d2e26;
      }

      body {
        margin: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
        background: 
          radial-gradient(ellipse at 50% 0%, rgba(183, 106, 59, 0.15) 0%, transparent 50%),
          radial-gradient(1200px 700px at 50% 20%, #2a1f1a 0%, var(--ink) 60%, #0a0705 100%);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        color: var(--cream);
      }

      .card {
        width: 100%;
        max-width: 420px;
        border-radius: 12px;
        padding: 40px 32px;
        border: 1px solid var(--border);
        background: linear-gradient(180deg, rgba(42, 31, 26, 0.95) 0%, rgba(28, 19, 15, 0.98) 100%);
        box-shadow: 0 24px 60px rgba(20, 10, 6, 0.5);
        text-align: center;
        position: relative;
      }

      .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, transparent 0%, var(--copper) 50%, transparent 100%);
        border-radius: 12px 12px 0 0;
      }

      /* CDL Badge - Standardized to match website hero */
      .badge {
        width: 52px;
        height: 72px;
        background: linear-gradient(145deg, rgba(20, 14, 10, 0.9) 0%, rgba(12, 8, 5, 0.95) 100%);
        border: 2px solid var(--brass);
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        box-shadow:
          0 0 20px rgba(212, 165, 116, 0.25),
          0 0 40px rgba(212, 165, 116, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.08),
          0 6px 24px rgba(0, 0, 0, 0.5);
        position: relative;
      }

      /* Subtle highlight overlay */
      .badge::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 8px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%, rgba(0, 0, 0, 0.1) 100%);
        pointer-events: none;
      }

      .badge-top {
        font-family: 'Bodoni Moda', Georgia, serif;
        font-size: 13px;
        font-weight: 900;
        font-style: italic;
        color: var(--brass);
        letter-spacing: 0.08em;
        text-transform: uppercase;
        margin-top: 10px;
        background: linear-gradient(180deg, var(--brass) 0%, var(--copper) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .badge-divider {
        width: 32px;
        height: 2px;
        background: linear-gradient(90deg, transparent 0%, var(--brass) 20%, var(--brass) 80%, transparent 100%);
        margin: 5px 0;
        opacity: 0.6;
      }

      .badge-num {
        font-family: 'Bodoni Moda', Georgia, serif;
        font-size: 22px;
        font-weight: 900;
        font-style: italic;
        color: var(--brass);
        line-height: 1;
        margin-bottom: 8px;
        background: linear-gradient(180deg, var(--brass) 0%, var(--copper) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .kicker {
        margin: 0 0 12px 0;
        font-size: 10px;
        letter-spacing: 0.35em;
        text-transform: uppercase;
        color: var(--copper);
        font-weight: 600;
      }

      .title {
        font-family: 'SF Sports Night', Impact, 'Arial Black', sans-serif;
        margin: 0 0 8px 0;
        font-size: 32px;
        line-height: 1.1;
        color: var(--brass);
        font-weight: 400;
        letter-spacing: 0.02em;
        text-transform: uppercase;
      }

      .sub {
        margin: 0 0 28px 0;
        opacity: 0.7;
        color: var(--cream);
        font-size: 14px;
        font-style: italic;
      }

      .state {
        border: 1px solid rgba(183, 106, 59, 0.25);
        border-radius: 8px;
        padding: 20px;
        background: rgba(183, 106, 59, 0.08);
      }

      .hidden {
        display: none;
      }

      .row {
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: center;
      }

      .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #4ade80;
        box-shadow: 0 0 0 4px rgba(74, 222, 128, 0.15);
        flex: 0 0 auto;
        animation: pulse 2s ease-in-out infinite;
      }

      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
      }

      .btn {
        display: inline-block;
        margin-top: 18px;
        padding: 16px 28px;
        border-radius: 2px;
        text-decoration: none;
        font-weight: 700;
        background: linear-gradient(180deg, #c4784a 0%, var(--copper) 50%, #9a5a30 100%);
        color: #fff;
        font-family: 'Bodoni Moda', Georgia, serif;
        font-style: italic;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        box-shadow: 0 8px 30px rgba(183, 106, 59, 0.3);
      }

      .btn--ghost {
        background: transparent;
        border: 1px solid rgba(212, 165, 116, 0.3);
        color: var(--cream);
        font-weight: 500;
        font-style: normal;
        box-shadow: none;
      }

      .actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
      }

      .sign-off {
        font-family: 'Bodoni Moda', Georgia, serif;
        font-style: italic;
        margin-top: 24px;
        font-size: 16px;
        color: var(--brass);
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <!-- CDL Badge -->
      <div class="badge">
        <span class="badge-top">CDL</span>
        <div class="badge-divider"></div>
        <span class="badge-num">1</span>
      </div>

      <p class="kicker">CDL:1 La Mesa</p>
      <h1 class="title">WELCOME</h1>
      <p class="sub">The doors are opening…</p>

      <div class="state" id="loadingState">
        <div class="row">
          <span class="dot" aria-hidden="true"></span>
          <div style="font-size: 14px; letter-spacing: 0.05em;">VERIFYING YOUR SEAT</div>
        </div>
      </div>

      <div class="state hidden" id="deniedState">
        <div style="color: var(--brass); font-family: 'Bodoni Moda', Georgia, serif; font-weight: 700; font-style: italic; margin-bottom: 8px; font-size: 18px;">Seat not found</div>
        <div style="opacity: 0.8; font-size: 14px; line-height: 1.5;">
          This email isn't registered for the tournament yet.
        </div>
        <div class="actions">
          <a class="btn" href="/#signup">Register</a>
          <a class="btn btn--ghost" href="/">Back</a>
        </div>
      </div>

      <div class="state hidden" id="errorState">
        <div style="color: var(--brass); font-family: 'Bodoni Moda', Georgia, serif; font-weight: 700; font-style: italic; margin-bottom: 8px; font-size: 18px;">Authentication failed</div>
        <div id="errorMessage" style="opacity: 0.8; font-size: 14px;"></div>
        <div class="actions">
          <a class="btn" href="/?mesa=1">Try again</a>
          <a class="btn btn--ghost" href="/">Back</a>
        </div>
      </div>

      <p class="sign-off">La mesa te espera.</p>
    </div>

    <script define:vars={{ SUPABASE_URL, SUPABASE_ANON_KEY }}>
      const loadingState = document.getElementById('loadingState');
      const deniedState = document.getElementById('deniedState');
      const errorState = document.getElementById('errorState');
      const errorMessage = document.getElementById('errorMessage');

      function showDenied() {
        loadingState.classList.add('hidden');
        deniedState.classList.remove('hidden');
      }

      function showError(message) {
        loadingState.classList.add('hidden');
        errorMessage.textContent = message;
        errorState.classList.remove('hidden');
      }

      async function handleCallback() {
        try {
          const { createClient } = await import('https://esm.sh/@supabase/supabase-js@2');
          const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

          const { data: { session } } = await supabase.auth.getSession();

          if (!session) {
            const hashParams = new URLSearchParams(window.location.hash.substring(1));
            const accessToken = hashParams.get('access_token');
            const refreshToken = hashParams.get('refresh_token');

            if (accessToken && refreshToken) {
              const { data, error } = await supabase.auth.setSession({
                access_token: accessToken,
                refresh_token: refreshToken,
              });
              if (error) return showError(error.message);
              if (data.session) return await verifyPlayer(supabase, data.session);
            }

            const urlParams = new URLSearchParams(window.location.search);
            const code = urlParams.get('code');
            if (code) {
              const { data, error } = await supabase.auth.exchangeCodeForSession(code);
              if (error) return showError(error.message);
              if (data.session) return await verifyPlayer(supabase, data.session);
            }

            return showError('No authentication tokens found. Please try again.');
          }

          await verifyPlayer(supabase, session);
        } catch (err) {
          console.error('[MESA_CALLBACK] Error:', err);
          showError('Something went wrong. Please try again.');
        }
      }

	      async function verifyPlayer(supabase, session) {
	        const accessToken = String(session?.access_token || '').trim();
	        const userEmail = String(session?.user?.email || '').toLowerCase();
	        if (!accessToken) {
	          await supabase.auth.signOut();
	          return showError('No session token found. Please try again.');
	        }

	        // Preferred: verify against Sheets via server (prevents impersonation; Sheets stays source-of-truth).
	        // Fallback (local/dev): direct players-table check if the server endpoint is unavailable.
	        try {
	          const res = await fetch('/api/mesa/verify', {
	            method: 'GET',
	            headers: { authorization: `Bearer ${accessToken}` },
	          });

	          if (res.ok) {
	            window.location.href = '/?mesa=1';
	            return;
	          }

	          if (res.status !== 404) {
	            const payload = await res.json().catch(() => null);
	            const errCode = payload && typeof payload === 'object' ? String(payload.error || '') : '';
	            if (errCode === 'not_registered') {
	              await supabase.auth.signOut();
	              return showDenied();
	            }
	            await supabase.auth.signOut();
	            return showError('Could not verify your seat. Please try again.');
	          }
	        } catch {
	          // fall through to local fallback
	        }

	        if (!userEmail) {
	          await supabase.auth.signOut();
	          return showDenied();
	        }

	        const { data: player, error } = await supabase
	          .from('players')
	          .select('id, status')
	          .eq('email', userEmail)
	          .in('status', ['registered', 'confirmed'])
	          .maybeSingle();

	        if (error || !player) {
	          await supabase.auth.signOut();
	          return showDenied();
	        }

	        window.location.href = '/?mesa=1';
	      }

      handleCallback();
    </script>
  </body>
</html>
